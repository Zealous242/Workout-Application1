<UserControl x:Class="WorkoutApplication.MVVM.View.StretchesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WorkoutApplication.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="660" d:DesignWidth="1140"
             Background="#00ccff">
    <StackPanel>
        <TextBlock Text="List of stretches goes here" 
                   Foreground="White"
                   FontSize="28"
                   FontWeight="Bold"
                   HorizontalAlignment="Left"
                   Margin="10 0 0 0"/>
        <RichTextBox Height="612" Margin="5 5 5 5" 
                     HorizontalScrollBarVisibility="Visible" 
                     VerticalScrollBarVisibility="Visible"
                     FontSize="20"
                     Block.LineHeight="2">
            <!--Add a scrollbard to the textbox for better usability-->
            <FlowDocument>
                <Paragraph>
                    <Run Text=""/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
    </StackPanel>
    
</UserControl>
